### Обязательные настройки ###

API_V1_STR=/api/v1

# PostgreSQL
POSTGRES_SERVER=postgres              # Имя сервиса в docker-compose
POSTGRES_USER=postgres                # Логин для PostgreSQL
POSTGRES_PASSWORD=postgres            # Пароль для PostgreSQL
POSTGRES_DB=auth_service              # Название базы данных

# Redis
REDIS_URI=redis://redis:6379/0        # Подключение к Redis

# JWT Authentication
SECRET_KEY=cc2dff28ad53378a581f8652b4b3f3022d8a9681ba31853b75c82fa488753b29
ACCESS_TOKEN_EXPIRE_MINUTES=30        # Время жизни access токена (минуты)
REFRESH_TOKEN_EXPIRE_DAYS=7           # Время жизни refresh токена (дни)

### Опциональные настройки (можно удалить если не используются) ###

# VK OAuth
VK_CLIENT_ID=your_vk_client_id        # ID приложения VK
VK_CLIENT_SECRET=your_vk_client_secret # Секрет приложения VK
VK_REDIRECT_URI=http://localhost:8000/api/v1/auth/vk/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Настройки приложения
DEBUG=true                            # Режим отладки (false для продакшена)
USE_ASYNC_MIGRATIONS=false            # Использовать асинхронные миграции